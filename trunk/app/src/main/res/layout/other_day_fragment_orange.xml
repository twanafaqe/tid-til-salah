<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@color/orange_Light">
    
    <ImageButton
	    android:id="@+id/settingsButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/ic_menu_icon"
	    android:layout_gravity="right"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
 		android:layout_alignParentRight="true"
	    android:background="@null"/>
    
     <TextView
        android:id="@+id/tabText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:fontFamily="sans-serif-condensed"/>
    
     <TextView
        android:id="@+id/tabText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otherdayfragment"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tabText1"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:fontFamily="sans-serif-condensed"/>
    
    
<LinearLayout
	    android:id="@+id/body"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="75dp"
	    android:layout_marginRight="75dp">
	    
    	<Button
    	    android:id="@+id/buttonVaelgDato"
    	    android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:textColor="@+drawable/button_text_style"
        	android:text="Vælg dato..."
        	android:paddingLeft="5dp"
        	android:gravity="center_vertical|left"
    		android:background="@+drawable/button_style_orange"
    		android:layout_marginBottom="10dp"
    		android:fontFamily="sans-serif-condensed"
    		android:textSize="15dp"/>

    	<Button
    	    android:id="@+id/buttonVaelgBy"
    	    android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:textColor="@+drawable/button_text_style"
        	android:text="Vælg by..."
        	android:paddingLeft="5dp"
        	android:gravity="center_vertical|left"
    		android:background="@+drawable/button_style_orange"
    		android:layout_marginBottom="10dp"
    		android:fontFamily="sans-serif-condensed"
    		android:textSize="15dp"/>

    	<Button
    	    android:id="@+id/searchButton"
    	    android:layout_width="match_parent"
        	android:layout_height="35dp"
        	android:textColor="@+drawable/button_text_style"
        	android:text="Søg"
        	android:paddingLeft="5dp"
        	android:gravity="center"
    		android:background="@+drawable/button_style_orange"
    		android:layout_marginBottom="10dp"
    		android:fontFamily="sans-serif-condensed"/>
    	
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="30dp"
			        android:orientation="horizontal"
			        android:layout_marginTop="20dp"
			        android:gravity="center"
			        >
			        <TextView
			            android:id="@+id/fajrText"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Fajr"
			            android:textColor="#ffffff"
			            android:textSize="20dp"
			            android:layout_marginLeft="0dp"
						android:fontFamily="sans-serif-light"/>
			
			        <TextView
				        android:id="@+id/fajrTidView"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:gravity="right"
				        android:textSize="20dp" 
				        android:text="--:--"
				        android:textStyle="bold"
				        android:textColor="#ffffff"
				        android:layout_marginRight="0dp"
						android:fontFamily="sans-serif-condensed"/>
			    </LinearLayout>
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:orientation="horizontal"
		        android:gravity="center">
		
		        <TextView
		            android:id="@+id/shuruqText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            android:text="Shuruq"
		            android:textColor="#ffffff"
		            android:textSize="20dp"
		            android:layout_marginLeft="0dp"
		            android:fontFamily="sans-serif-light"/>
		
		        <TextView
			        android:id="@+id/shuruqTidView"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:textSize="20dp" 
			        android:text="--:--"
			        android:textStyle="bold"
			        android:textColor="#ffffff"
			        android:layout_marginRight="0dp"
			        android:fontFamily="sans-serif-condensed"/>
		    </LinearLayout>
		       
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="30dp"
			        android:orientation="horizontal"
			        android:gravity="center"
			        >
			
			        <TextView
			            android:id="@+id/duhurText"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="right"
			            android:text="Duhur"
			            android:textColor="#ffffff"
			            android:textSize="20dp"
						android:layout_marginLeft="0dp"
						android:fontFamily="sans-serif-light"/>
			
			        <TextView
			            android:id="@+id/duhurTidView"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="right"
			            android:text="--:--"
			            android:textColor="#ffffff"
			            android:textSize="20dp"
			            android:textStyle="bold"
			            android:layout_marginRight="0dp"
			            android:fontFamily="sans-serif-condensed"/>

			    </LinearLayout>
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:orientation="horizontal"
		        android:gravity="center">
		
		        <TextView
		            android:id="@+id/asrText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Asr"
		            android:textColor="#ffffff"
		            android:textSize="20dp"
		            android:layout_marginLeft="0dp"
		            android:fontFamily="sans-serif-light"/>/>
		
		        <TextView
			        android:id="@+id/asrTidView"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:textSize="20dp" 
			        android:text="--:--"
			        android:textStyle="bold"
			        android:textColor="#ffffff"
			        android:layout_marginRight="0dp"
			        android:fontFamily="sans-serif-condensed"/>
		    </LinearLayout>       
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="30dp"
			        android:orientation="horizontal"
			        android:gravity="center">
		
			        <TextView
			            android:id="@+id/maghribText"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Maghrib"
			            android:textColor="#ffffff"
			            android:textSize="20dp"
			            android:layout_marginLeft="0dp"
			            android:fontFamily="sans-serif-light"/>
			
			        <TextView
				        android:id="@+id/maghribTidView"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:gravity="right"
				        android:textSize="20dp" 
				        android:text="--:--"
				        android:textStyle="bold"
				        android:textColor="#ffffff"
				        android:layout_marginRight="0dp"
				        android:fontFamily="sans-serif-condensed"/>
		    	</LinearLayout>
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:orientation="horizontal"
		        android:gravity="center">
		
		        <TextView
		            android:id="@+id/ishaText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Isha"
		            android:textColor="#ffffff"
		            android:textSize="20dp"
		            android:layout_marginLeft="0dp"
		            android:fontFamily="sans-serif-light"/>
		
		        <TextView
			        android:id="@+id/ishaTidView"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:textSize="20dp" 
			        android:text="--:--"
			        android:textStyle="bold"
			        android:textColor="#ffffff"
			        android:layout_marginRight="0dp"
			        android:fontFamily="sans-serif-condensed"/>
		    </LinearLayout>
</LinearLayout>
    

</RelativeLayout>
