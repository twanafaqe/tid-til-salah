                android:id="@+id/ishaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isha"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/ishaTidView"
                android:layout_width="wrap_content"
